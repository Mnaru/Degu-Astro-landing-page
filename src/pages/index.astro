---
import BaseLayout from '@layouts/BaseLayout.astro';
import ScrollHint from '@components/ScrollHint.astro';
---

<BaseLayout title="Degu Landing Page" description="Welcome to the Degu Landing Page">
  <main class="hero">
    <h1>Degu</h1>
    <p>A fast, modern landing page built with Astro.</p>
    <ScrollHint />
  </main>
</BaseLayout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100dvh;
    text-align: center;
    padding: 2rem;
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(4rem, 10vw, 8rem);
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  p {
    margin-top: 1rem;
    font-size: clamp(1rem, 2vw, 1.25rem);
    max-width: 40ch;
  }
</style>
