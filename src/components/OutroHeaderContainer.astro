---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  text: string;
  class?: string;
}

const { text, class: className, ...attrs } = Astro.props;
---

<div class:list={['outro-header-container', className]} {...attrs}>
  <span class="outro-header-text">{text}</span>
</div>

<style>
  .outro-header-container {
    width: max(310px, calc(155px + 43.056vw));
    margin-left: max(0px, calc(-116.35px + 29.087vw));
  }

  .outro-header-text {
    display: block;
    margin-left: var(--optical-adjust-display);
    font-family: var(--font-display);
    font-size: max(100px, calc(50px + 13.889vw));
    font-style: normal;
    font-weight: 400;
    line-height: 1;
    text-align: left;
    text-transform: uppercase;
    color: var(--color-offwhite);
    white-space: nowrap;
    text-box-trim: both;
    text-box-edge: cap;
  }
</style>
