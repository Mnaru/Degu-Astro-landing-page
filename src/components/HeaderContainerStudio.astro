---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  text: string;
  class?: string;
}

const { text, class: className, ...attrs } = Astro.props;
---

<div class:list={['header-container-studio', className]} {...attrs}>
  <span class="header-text">{text}</span>
</div>

<style>
  .header-container-studio {
    width: fit-content;
  }

  .header-text {
    display: block;
    margin-left: var(--optical-adjust-display);
    font-family: var(--font-display);
    font-size: max(74px, calc(38px + 10vw));
    font-style: normal;
    font-weight: 400;
    line-height: 1;
    text-align: center;
    text-transform: uppercase;
    color: var(--color-offwhite);
    white-space: nowrap;
    text-box-trim: both;
    text-box-edge: cap;
  }
</style>
